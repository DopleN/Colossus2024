<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/control/css/styles.css" />
  <script src="https://d3js.org/d3.v6.min.js"></script>

  <style>
    .description {
      font-size: 0.7rem;
    }
  </style>

  <title>Analytics Dashboard</title>
</head>

<body>
  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loading-overlay" style="z-index: 9999">
    <div class="spinner-border text-muted" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <%- include('./sidebar_nav') %>

  <main class="container mt-5 mb-5">
    <div class="row">
      <div class="list-group col-lg-2 col-sm-3 nav-tabs-container">
        <a class="list-group-item list-group-item-action active tab-link revenue-tab bg-dark text-white"
          id="list-revenue" data-toggle="list" href="#revenue-section" role="tab" data-chart="revenue"
          aria-controls="revenue">Revenue Overview</a>
        <a class="list-group-item list-group-item-action tab-link orders-tab bg-dark text-white" id="list-orders"
          data-toggle="list" href="#orders-section" role="tab" data-chart="orders" aria-controls="orders">Orders
          Overview</a>
      </div>
      <div class="col-8 content-area">
        <div class="row chart-container">
          <div class="chart" id="revenue-graph"></div>
          <div class="chart hidden" id="orders-graph"></div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://d3js.org/d3.v6.min.js"></script>

  <script type="module" src="/control/js/graph-data.js"></script>
</body>

</html>
