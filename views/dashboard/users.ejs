<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/control/css/layout.css" />
  <title>Admin Panel</title>
</head>

<body>
  <!-- Loading Animation -->
  <div class="loading-overlay" id="loading-overlay" style="z-index:9999">
    <div class="spinner-border text-muted" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <%- include('./navbar') %>

  <main class="container mt-5 mb-5">
    <div class="row">
      <div class="list-group col-lg-2 col-sm-3 tab-links-container">
        <a class="list-group-item list-group-item-action active tab-view all-items-tab bg-dark text-light"
          id="list-items-list" data-toggle="list" href="#all_items" role="tab" aria-controls="home">Items</a>
      </div>
      <div class="col-8 content-section">
        <div class="row item-list">
          <div class="col-12">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Surname</th>
                  <th scope="col">Email Address</th>
                </tr>
              </thead>
              <tbody>
                <% records.forEach((record, index) => { %>
                <tr data-item-id="<%= record.email %>">
                  <th scope="row"><%= index + 1 %></th>
                  <td><%= record.firstName %></td>
                  <td><%= record.lastName %></td>
                  <td><%= record.email %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script type="module" src="/control/js/records.js"></script>
</body>

</html>
